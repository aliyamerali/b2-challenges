<h2><%=@mechanic.name%></h2>

<p><%=@mechanic.years_experience%> Years Experience</p>

<h4>Rides: </h4>
<ul>
<% @rides.each do |ride| %>
    <li><%= ride.name %></li>
<% end %>
</ul>

<h4>Add a ride to workload:</h4>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
  <%= f.label :ride_id, "Ride ID: " %>
  <%= f.text_field :ride_id %>
  <%= f.submit "Submit" %>
<% end %>
